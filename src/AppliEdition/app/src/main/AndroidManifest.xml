<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boris.emaestro" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.UPDATE_DEVICE_STATS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_emaestro"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreationMusiqueActivity"
            android:label="@string/title_activity_creation_musique"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EditionActivity"
            android:label="@string/title_activity_edition"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CatalogueActivity"
            android:label="@string/title_activity_catalogue"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ChangeCatalogueActivity"
            android:label="@string/title_activity_change_catalogue"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape" >
        </activity>

        <activity
            android:name="emulateur.EmulateurActivity"
            android:label="@string/title_activity_emulateur"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name="telecommande.Telecommande"
            android:label="@string/title_activity_telecommande"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name="emulateur.LectureActivity"
            android:label="EmulateurV2Activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>
