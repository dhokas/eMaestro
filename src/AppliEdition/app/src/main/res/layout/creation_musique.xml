<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/nomPartition"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/partition"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size"
          />

        <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/partition"
            android:lines="5"
            android:inputType="text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/nombreMesure"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/mesure"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/nbMesure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/mesure"
            android:inputType="number"
            android:lines="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView

            android:id="@+id/textPulsation"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Tempo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/pulsation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tempo"
            android:inputType="number"
            android:lines="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView

        android:id="@+id/uniteNote"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
            android:text="Unite"
        android:textSize="@dimen/normal_text_size"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/uniteTempo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView

            android:id="@+id/infoMesure"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Temps par mesure"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/tempsParMesure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </TableRow>

    <Button
            android:id="@+id/creer"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="creer"

        />



</LinearLayout>
</ScrollView>