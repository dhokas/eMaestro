<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1"
    android:foregroundGravity="center">

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Se connecter au eMaestro"
        android:id="@+id/connectButton"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="451dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Selectionner une musique"
            android:id="@+id/textView5"
            android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/musiqueSpinner"
            android:layout_marginLeft="@dimen/abc_action_bar_default_height_material"
            android:contextClickable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="838dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="380dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre de mesures du morceau : "
            android:id="@+id/textView4"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textNbMesures"
            android:textColor="@android:color/black"
            android:inputType="none" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="838dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="380dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Commencer à la mesure :"
        android:textColor="@android:color/black"
        android:id="@+id/textView"
        android:inputType="none"
        android:layout_weight="0.00" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editMesureDebut" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Finir à la mesure :"
            android:textColor="@android:color/black"
            android:id="@+id/textView2"
            android:inputType="none"
            android:layout_weight="0.00" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editMesureFin" />
    </LinearLayout>

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Lancer la lecture"
        android:id="@+id/playButton"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Se déconnecter"
        android:id="@+id/quitButton"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Eteindre la MaestroBox"
        android:id="@+id/shutdownButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>