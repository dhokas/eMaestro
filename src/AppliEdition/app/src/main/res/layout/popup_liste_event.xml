<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre de temps"
            android:id="@+id/textView5"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerModifNbTemps"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tempo (bpm)"
            android:id="@+id/textView7"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120"
            android:id="@+id/textModifTempo"
            android:inputType="number"
            android:editable="true" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Unite"
            android:id="@+id/textView8"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerModifUnite"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

    </TableRow>

    <Button
        android:id="@+id/newEvent"
        android:text="Ajouter un événement"
        android:layout_width="230dp"
        android:layout_height="45dp" />

    <ListView
        android:id="@+id/listEventNuance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ListView
        android:id="@+id/listEventArmature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ListView
        android:id="@+id/listEventReprise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ListView
        android:id="@+id/listEventMesuresNonLues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ListView
        android:id="@+id/listEventAlertes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>